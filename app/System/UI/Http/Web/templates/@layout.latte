<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>

	{if $vite->isEnabled()}
		<script type="module" src="{='@vite/client'|asset}"></script>
	{/if}

	<script src="{='src/scripts/main.js'|asset}" type="module"></script>
	<link rel="stylesheet" href="{='src/styles/main.css'|asset}">
</head>

<body data-controller="body">
	<div class="flex flex-col h-screen bg-slate-800 text-white">
		<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
		{include header.latte}
		{include content}
		{include footer.latte}
	</div>

	{block scripts}{/block}
</body>
</html>
