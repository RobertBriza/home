<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title n:snippet="title" n:inner-block="title">Nette Web</title>
	{if $vite->isEnabled()}
		<script type="module" src="{='@vite/client'|asset}"></script>
	{/if}

	<script src="{='src/scripts/main.js'|asset}" type="module"></script>
	<link rel="stylesheet" href="{='src/styles/main.css'|asset}">
</head>

<body data-controller="body">
	<div class="flex flex-col h-screen bg-slate-800 text-white">
		{include header.latte}
		<div n:snippet="flashes" class="fixed top-16 left-0 w-full z-50" data-naja-snippet-append>
			{include flashes.latte}
		</div>
		<div n:inner-block="content" n:snippet="content" class="container mainContent flex-1 overflow-hidden"></div>
		{include footer.latte}
	</div>
	{block scripts}{/block}
</body>
</html>